@model IEnumerable<MagicVilla_Web.Dto.VillaNumberDto>
<div class="container border">
    <div class="row p-3">
        <div class="col">
            <h1 class="text-primary">Villas Number List</h1>
        </div>
        <div class="col text-end p-2">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Add Villa Number</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">VillaName</th>
                <th scope="col">Detials</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @{
                int i = 1;
            }
            @foreach (var v in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@v.Id</td>
                    <td>@v.Villa.Name</td>
                    <td>@v.SpecialDetail</td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-id="@v.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-id="@v.Id" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
