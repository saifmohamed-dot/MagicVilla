@model IEnumerable<MagicVilla_Web.Dto.VillaDto>
<div class="container border">
    <div class="row p-3">
        <div class="col">
            <h1 class="text-primary">Villas List</h1>
        </div>
        <div class="col text-end p-2">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create Villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Rate</th>
                <th scope="col">Square feet</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @{
                int i = 1;
            }
            @foreach(var v in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@v.Name</td>
                    <td>@v.Rate</td>
                    <td>@v.Sqft</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-id="@v.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-id="@v.Id" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                        
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
