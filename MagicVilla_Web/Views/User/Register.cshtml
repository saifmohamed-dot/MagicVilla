@model MagicVilla_Web.Dto.UserRegistrationRequestDto
<form asp-action="Register">
    <div class="container border p-3 mt-4">
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div class="row">
            <div class="col text-center">
                <h1 class="text-success">User Information</h1>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-2">
                <label asp-for="UserName" class="text-success"></label>
            </div>
            <div class="col-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-2">
                <label asp-for="Password" class="text-success"></label>
            </div>
            <div class="col-10">
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-2">
                <label asp-for="ConfirmPassword" class="text-success"></label>
            </div>
            <div class="col-10">
                <input asp-for="ConfirmPassword" class="form-control" type="password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row p-2 justify-content-around">
            <input type="submit" value="SignUp" class="btn btn-success col-5" />
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}